{
    "name": "icecave/manifold",
    "description": "A PDO compatible facade for multi-tiered MySQL replication sets.",
    "keywords": ["pdo", "mysql", "replication", "database", "master", "slave", "multiple", "doctrine"],
    "homepage": "https://github.com/IcecaveStudios/manifold",
    "license": "MIT",
    "authors": [
        {
            "name": "Erin Millard",
            "email": "ezzatron@gmail.com",
            "homepage": "http://ezzatron.com/"
        },
        {
            "name": "James Harris",
            "email": "james.harris@icecave.com.au",
            "homepage": "https://github.com/jmalloc"
        }
    ],
    "require": {
        "php": ">=5.3",
        "ext-pdo": "*",
        "eloquent/asplode": "~1",
        "eloquent/constance": "dev-develop@dev",
        "eloquent/schemer": "dev-develop@dev",
        "icecave/chrono": "~0.3.0",
        "psr/log": "~1",
        "symfony/yaml": "~2"
    },
    "require-dev": {
        "eloquent/liberator": "~1",
        "icecave/archer": "~1"
    },
    "autoload": {
        "psr-0": {
            "Icecave\\Manifold": "src"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
